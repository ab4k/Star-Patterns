#include <stdio.h>
int main() {
    int m, n, k;
    printf("Enter the value of m: ");
    scanf("%d", &m);
    
    printf("Enter the value of n: ");
    scanf("%d", &n);
    
    for(int i = 1; i <= m; i++) {
        k = 1;
        for(int j = 1; j <= n; j++) {
            if(j >= m+1-i && j <= m-1+i && k) {
                printf("*");
                k = 0;
            }
            else {
                printf(" ");
                k = 1;
            } 
        }
        printf("\n");
    }
}
