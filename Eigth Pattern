#include <stdio.h>

void main() {
    int m, n, i, j, num;
    
    printf("Enter the value of m: ");
    scanf("%d", &m);
    
    printf("Enter the value of n: ");
    scanf("%d", &n);
    
    for(i = 1; i<=m; i++) {
        num = 1;
        for(j = 1; j<=n; j++) {
            if(j >= m+1-i && j <= m-1+i) {
                printf("%d", num);
                if(j<(n+1)/2)
                    num++;
                else
                    num--;
            } else 
                printf(" ");
        }
        printf("\n");
    }
}
